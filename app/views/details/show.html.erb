<%= render 'layouts/navbar' %>

<%= form_for :get do |f| %>
  <%= f.label :platform, 'Your Platform'  %>
  <%= f.select :platform, [['PC','pc'],['PS4','ps4'],['Xbox','xbox']] %>
  <%= f.label :region, 'Your Region'  %>
  <%= f.select :region, [['US','us'],['EU','eu'],['Asia','asia']] %>
  <%= label_tag :battle_tag, 'Your Battle Tag' %>
  <%= f.text_field :battle_tag %>
  <%= f.submit %>
<% end %>

